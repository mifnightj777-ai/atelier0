<div class="max-w-[2000px] mx-auto px-4 py-8">
  
  <div class="flex items-end justify-between mb-10 px-2 border-b border-slate-100 pb-6">
    <div>
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-50 text-indigo-600 text-[10px] font-bold uppercase tracking-widest mb-3">
        Archive â€¢ <%= @prompt.date.strftime("%B %d, %Y") %>
      </div>
      <h1 class="text-4xl md:text-6xl font-['Poppins'] font-bold text-slate-900 tracking-tighter leading-tight">
        "<%= @prompt.content %>"
      </h1>
    </div>
    
    <%= link_to prompts_path, class: "group flex items-center gap-2 text-xs font-bold font-['Space_Grotesk'] text-slate-400 hover:text-slate-900 uppercase tracking-widest transition-colors mb-2" do %>
      <span>Back to Archive</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" /></svg>
    <% end %>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-1">
    <% if @fragments.any? %>
      <% @fragments.each do |fragment| %>
        <div class="group relative aspect-square bg-slate-100 overflow-hidden cursor-pointer">
          <% if fragment.image.attached? %>
            <%= image_tag fragment.image, class: "w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-slate-50 text-slate-300 font-bold">?</div>
          <% end %>

          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-6">
             <h3 class="text-white font-bold text-lg line-clamp-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
               <%= fragment.title.presence || "Untitled" %>
             </h3>
             <div class="flex items-center gap-2 mt-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-100 text-white/80 text-xs">
               <span>@<%= fragment.user.username rescue "unknown" %></span>
             </div>
             <%= link_to "", fragment_path(fragment), class: "absolute inset-0 z-10" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-span-full py-40 text-center text-slate-400">
        <p>No fragments found for this prompt.</p>
      </div>
    <% end %>
  </div>
</div>