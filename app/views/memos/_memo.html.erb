<div id="<%= dom_id memo %>" class="group relative bg-indigo-50 border-l-4 border-indigo-500 p-3 shadow-sm hover:shadow-md transition-all duration-300 mb-3">
  
  <p class="text-xs md:text-sm text-slate-700 font-['Inter'] whitespace-pre-wrap leading-relaxed"><%= memo.content %></p>
  
  <div class="absolute top-1 right-1 opacity-0 group-hover:opacity-100 transition-opacity">
    <%= button_to idea_memo_path(memo.idea, memo), method: :delete, class: "text-indigo-300 hover:text-red-500 p-1" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3"><path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" /></svg>
    <% end %>
  </div>
  
  <div class="mt-2 text-[9px] text-indigo-300 font-['Inter'] text-right">
    <%= time_ago_in_words(memo.created_at) %> ago
  </div>
</div>