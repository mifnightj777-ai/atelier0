<div id="<%= dom_id memo %>" class="group relative <%= memo.color.presence || 'memo-yellow' %> p-5 shadow-sm hover:shadow-md transition-all duration-500 mb-4 rounded-2xl border-l-4 border-slate-200/50">
  
  <p class="text-xs md:text-sm text-slate-700 font-['Inter'] whitespace-pre-wrap leading-relaxed"><%= memo.content %></p>
  
  <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity">
    <%= button_to idea_memo_path(memo.idea, memo), method: :delete, class: "text-slate-400 hover:text-red-500 p-1.5 bg-white/50 rounded-full transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" /></svg>
    <% end %>
  </div>
  
  <div class="mt-3 text-[9px] text-slate-400 font-medium text-right">
    <%= time_ago_in_words(memo.created_at) %> ago
  </div>
</div>