<%= form_with(model: [idea, memo], class: "w-full") do |f| %>
  <div class="<%= memo.color.presence || 'memo-yellow' %> p-4 rounded-2xl border-l-4 border-slate-200/50 min-h-[140px] flex flex-col gap-2">
    
    <%# ★修正: ここに focus:ring-0 focus:outline-none を入れて青枠を消去 %>
    <%= f.text_area :content, class: "w-full bg-transparent border-none focus:ring-0 focus:outline-none p-0 text-xs md:text-sm text-slate-700 resize-none h-24", placeholder: "Edit content..." %>
    
    <div class="flex justify-end gap-2">
      <%= link_to "Cancel", idea_path(idea), class: "text-xs text-slate-400 hover:text-slate-600" %>
      <%= f.submit "Save", class: "text-xs bg-white/50 px-3 py-1 rounded-full text-indigo-600 font-bold hover:bg-white cursor-pointer" %>
    </div>
  </div>
<% end %>