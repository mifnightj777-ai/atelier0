<div class="max-w-4xl mx-auto py-10">
  
  <div class="flex items-end justify-between mb-12 border-b border-slate-200 pb-6">
    <div>
      <h1 class="font-['Poppins'] text-3xl md:text-4xl font-bold text-slate-900">Idea Vault</h1>
      <p class="text-slate-400 text-xs mt-2 font-['Space_Grotesk'] tracking-widest uppercase">
        Stored Thoughts / <%= @ideas.count %> Items
      </p>
    </div>
    
    <%= link_to focus_studio_path, class: "group flex items-center gap-2 text-indigo-600 font-['Poppins'] font-bold text-sm hover:text-indigo-800 transition-colors" do %>
      <span>NEW IDEA</span>
      <div class="w-8 h-8 rounded-full bg-indigo-50 flex items-center justify-center group-hover:bg-indigo-100 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
      </div>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @ideas.each do |idea| %>
      
      <%= link_to edit_idea_path(idea), class: "block group relative bg-white rounded-2xl p-6 border border-slate-100 shadow-sm hover:shadow-md hover:border-indigo-100 transition-all duration-300" do %>
        
        <div class="flex justify-between items-start mb-2">
          <h2 class="text-xl font-['Poppins'] font-bold text-slate-800 group-hover:text-indigo-600 transition-colors line-clamp-1">
            <%= idea.title.presence || "Untitled Idea" %>
          </h2>
          
          <% if idea.private_view? %>
             <span class="shrink-0 text-[10px] font-bold bg-slate-100 text-slate-500 px-2 py-1 rounded uppercase tracking-wider">Private</span>
          <% elsif idea.teammates_view? %>
             <span class="shrink-0 text-[10px] font-bold bg-amber-50 text-amber-600 px-2 py-1 rounded uppercase tracking-wider flex items-center gap-1">
               <span>⚡️</span> Team
             </span>
          <% end %>
        </div>

        <p class="text-slate-500 font-['Inter'] text-sm line-clamp-2 leading-relaxed mb-4">
          <%= idea.description.presence || "No content..." %>
        </p>

        <div class="flex justify-between items-end border-t border-slate-50 pt-4">
          <span class="text-[10px] text-slate-400 font-['Space_Grotesk'] uppercase tracking-widest">
            Last edited <%= time_ago_in_words(idea.updated_at) %> ago
          </span>
          
          </div>

      <% end %>
      
      <div class="flex justify-end -mt-10 mr-6 relative z-10 pointer-events-none">
        <%= button_to idea_path(idea), method: :delete, form: { class: "pointer-events-auto" }, class: "text-slate-300 hover:text-red-400 p-2 transition-colors", title: "Delete Idea" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
          </svg>
        <% end %>
      </div>

    <% end %>

    <% if @ideas.empty? %>
      <div class="py-20 text-center opacity-50">
        <p class="font-['Poppins'] text-slate-400">The vault is empty.</p>
      </div>
    <% end %>
  </div>
</div>