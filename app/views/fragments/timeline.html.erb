<div class="max-w-6xl mx-auto md:py-10 min-h-screen">
  
  <div class="mb-10 flex items-center justify-between">
    <%= link_to fragment_path(@fragment), class: "inline-flex items-center gap-2 text-sm font-['Poppins'] text-slate-500 hover:text-indigo-600 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back to Fragment
    <% end %>

    <h1 class="font-['Poppins'] font-bold text-xl text-slate-800">Evolution Tree</h1>
  </div>

  <div class="bg-slate-50/50 rounded-[30px] border border-slate-100 p-8 md:p-16 overflow-x-auto custom-scrollbar flex justify-center min-h-[60vh]">
    <div class="flex flex-col items-center">
      <%= render partial: "fragments/tree_node", locals: { node: @root } %>
    </div>
  </div>

</div>