<div class="max-w-2xl mx-auto py-10">
  <div class="mb-8 text-center">
    <h1 class="font-['Poppins'] text-3xl font-bold text-slate-900">Edit Fragment</h1>
    <p class="text-slate-500 text-sm mt-1">カケラを磨き直す。</p>
  </div>

  <div class="bg-white rounded-[30px] shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
    <%= render "form", fragment: @fragment %>
  </div>

  <div class="flex justify-center gap-6 mt-8">
    <%= link_to @fragment, class: "group flex items-center gap-2 text-sm font-['Poppins'] font-medium text-indigo-600 hover:text-indigo-800 transition-colors" do %>
      <span>View Fragment</span>
      <span class="block w-4 h-[1px] bg-indigo-600 group-hover:w-6 transition-all"></span>
    <% end %>

    <%= link_to fragments_path, class: "group flex items-center gap-2 text-sm font-['Poppins'] font-medium text-slate-400 hover:text-slate-600 transition-colors" do %>
      <span class="block w-4 h-[1px] bg-slate-400 group-hover:w-6 transition-all"></span>
      <span>Back to Studio</span>
    <% end %>
  </div>
</div>