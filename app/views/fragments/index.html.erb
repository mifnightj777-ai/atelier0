<div class="w-full">
  
  <div class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16">
    <div>
      <h1 class="font-['Poppins'] text-4xl md:text-5xl font-bold text-slate-900 leading-none tracking-tight">
        Studio
        <span class="text-indigo-700">Drops.</span>
      </h1>

      <div class="mt-6 flex items-center gap-4">
        <div class="flex flex-col items-start">
          <span class="font-['Poppins'] text-4xl font-bold text-indigo-700 leading-none tracking-tighter">
            <%= @fragments.count %>
          </span>
          <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
            Fragments
          </span>
        </div>
        
        <div class="h-8 w-[1px] bg-slate-200"></div>
        
        <div class="text-xs text-slate-500 font-['Inter'] leading-tight">
          Total items dropped<br>in the studio.
        </div>
      </div>
    </div>
    
    <div class="flex items-center" data-controller="top-tabs">
      <div class="relative flex items-center bg-white/60 backdrop-blur-md border border-white/60 p-1.5 rounded-full shadow-sm w-72">
        
        <% background_class = if params[:filter] == 'teammates'
             "left-[calc(50%+4px)] w-[calc(50%-8px)] bg-amber-500 shadow-[0_4px_14px_0_rgba(245,158,11,0.39)]"
           else
             "left-1 w-[calc(50%-4px)] bg-indigo-600 shadow-[0_4px_14px_0_rgba(79,70,229,0.39)]"
           end %>
        <div data-top-tabs-target="background" class="absolute top-1.5 bottom-1.5 rounded-full transition-all duration-500 ease-[cubic-bezier(0.23,1,0.32,1)] <%= background_class %>"></div>

        <%= link_to root_path, 
            data: { 
              action: "click->top-tabs#switchToWorld", 
              turbo_action: "advance",
              turbo_frame: "home_content",
              top_tabs_target: "worldLink"
            },
            class: "relative z-10 flex-1 text-center py-2 rounded-full text-xs font-['Poppins'] font-bold tracking-widest transition-all duration-500 ease-out #{params[:filter].nil? ? 'text-white' : 'text-slate-400 hover:text-indigo-600'}" do %>
          World üåç
        <% end %>

        <% if user_signed_in? %>
          <%= link_to root_path(filter: 'teammates'), 
              data: { 
                action: "click->top-tabs#switchToTeammates", 
                turbo_action: "advance",
                turbo_frame: "home_content",
                top_tabs_target: "teammatesLink"
              },
              class: "relative z-10 flex-1 text-center py-2 rounded-full text-xs font-['Poppins'] font-bold tracking-widest transition-all duration-500 ease-out #{params[:filter] == 'teammates' ? 'text-white' : 'text-slate-400 hover:text-amber-600'}" do %>
            Teammates ‚ö°Ô∏è
          <% end %>
        <% else %>
          <span class="relative z-10 flex-1 text-center py-2 rounded-full text-xs font-['Poppins'] font-bold tracking-widest text-slate-300 cursor-not-allowed opacity-50">
            Teammates üîí
          </span>
          <span data-top-tabs-target="teammatesLink" class="hidden"></span>
        <% end %>

      </div>
    </div>

    <%= link_to new_fragment_path, class: "fixed bottom-10 right-10 z-40 w-16 h-16 bg-indigo-700 text-white rounded-full shadow-xl shadow-indigo-700/30 flex items-center justify-center hover:scale-110 hover:bg-indigo-800 transition-all duration-300 active:scale-95 group" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-8 h-8 group-hover:rotate-90 transition-transform duration-300">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
    <% end %>
  </div>

  <%= turbo_frame_tag "home_content" do %>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6 md:gap-8">
      
      <% @fragments.each do |fragment| %>
        <div class="group relative transition-all duration-300 ease-out hover:-translate-y-2 hover:rotate-2">
          <div class="bg-white p-2 rounded-[20px] shadow-[0_8px_30px_rgb(0,0,0,0.08)] border border-slate-100 group-hover:shadow-[0_20px_40px_rgb(99,102,241,0.2)] transition-shadow">
            
            <div class="w-full aspect-[4/5] overflow-hidden rounded-[12px] bg-slate-100 relative mb-3">
              
              <% if fragment.private_view? %>
                <div class="absolute top-2 right-2 z-30 bg-black/80 text-white w-7 h-7 flex items-center justify-center rounded-full backdrop-blur-md shadow-lg border border-white/10">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3"><path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" /></svg>
                </div>
              <% elsif fragment.teammates_view? %>
                <div class="absolute top-2 right-2 z-30 bg-amber-400 text-white w-7 h-7 flex items-center justify-center rounded-full shadow-[0_0_15px_rgba(251,191,36,0.6)] border-2 border-white">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
                    <path d="M11 5a3 3 0 11-6 0 3 3 0 016 0zM2.615 16.428a1.224 1.224 0 01-.569-1.175 6.002 6.002 0 0111.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 017 18a9.953 9.953 0 01-4.385-1.572zM16.25 5.75a.75.75 0 00-1.5 0v2h-2a.75.75 0 000 1.5h2v2a.75.75 0 001.5 0v-2h2a.75.75 0 000-1.5h-2v-2z" />
                  </svg>
                </div>
              <% end %>

              <% if fragment.image.attached? %>
                <%= image_tag fragment.image, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex flex-col items-center justify-center bg-indigo-50 text-indigo-300 p-4 text-center">
                  <span class="font-['Poppins'] font-bold text-2xl mb-2">?</span>
                  <span class="text-xs font-['Poppins']">No Image</span>
                </div>
              <% end %>
            </div>

            <div class="px-1 pb-2">
               <h3 class="font-['Poppins'] font-bold text-slate-800 text-sm line-clamp-1 mb-0.5">
                 <%= fragment.title.presence || "Untitled" %>
               </h3>
               
               <% if fragment.description.present? %>
                 <p class="text-[10px] text-slate-400 font-['Inter'] line-clamp-1 mb-2">
                   <%= fragment.description %>
                 </p>
               <% else %>
                 <div class="mb-2"></div>
               <% end %>
               
               <div class="flex items-center justify-end mb-2 h-6">
                 <div class="relative z-20 scale-75 origin-right">
                   <% if user_signed_in? %>
                     <%= render 'likes/like_button', fragment: fragment %>
                   <% end %>
                 </div>
               </div>
               
               <div class="flex justify-between items-center text-[10px] font-['Inter'] text-slate-500">
                 <%= link_to user_profile_path(username: fragment.user.username), class: "bg-indigo-50 text-indigo-700 px-2 py-0.5 rounded-full font-medium truncate max-w-[50%] hover:bg-indigo-100 transition-colors relative z-20", data: { turbo_frame: "_top" } do %>
                   @<%= fragment.user.username %>
                 <% end %>
                 <span><%= fragment.created_at.strftime("%Y.%m.%d") %></span>
               </div>
            </div>

          </div>
          <%= link_to "", fragment, class: "absolute inset-0 z-10", data: { turbo_frame: "_top" } %>
        </div>
      <% end %>
    </div>

    <% if @fragments.empty? %>
      <div class="mt-40 flex flex-col items-center justify-center text-center opacity-60">
        <div class="w-20 h-20 bg-indigo-50 rounded-full flex items-center justify-center mb-4">
          <div class="w-4 h-4 bg-indigo-700 rounded-full animate-bounce"></div>
        </div>
        <p class="font-['Poppins'] text-slate-500 font-medium">Ready to drop your first fragment?</p>
      </div>
    <% end %>

  <% end %> 
  </div>