<div class="mb-8 pt-4 px-4 md:px-0">
    
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
      
      <div class="flex flex-col md:flex-row md:items-center gap-6 md:gap-8">
        
        <div>
          <div class="flex items-baseline gap-2">
            <h1 class="font-['Poppins'] text-4xl font-bold text-slate-900 leading-none tracking-tight">
              Studio <span class="text-indigo-600">Drops.</span>
            </h1>
          </div>
        </div>

        <div data-controller="top-tabs">
          <div class="relative flex items-center bg-slate-200/60 p-1 rounded-full w-56 shadow-inner">
            
            <% is_teammates = (params[:filter] == 'teammates') %>
            
            <% background_class = if is_teammates
                 "left-[calc(50%+2px)] w-[calc(50%-4px)] bg-amber-500 shadow-md shadow-amber-500/30 border border-amber-400"
               else
                 "left-1 w-[calc(50%-4px)] bg-indigo-600 shadow-md shadow-indigo-500/30 border border-indigo-500"
               end %>
            
            <div data-top-tabs-target="background" class="absolute top-1 bottom-1 rounded-full transition-all duration-300 ease-[cubic-bezier(0.23,1,0.32,1)] <%= background_class %>"></div>

            <%= link_to fragments_path, 
                data: { 
                  action: "click->top-tabs#switchToWorld", 
                  turbo_action: "advance",
                  turbo_frame: "home_content",
                  top_tabs_target: "worldLink"  # â˜…ã“ã“ã‚’è¿½åŠ 
                },
                class: "relative z-10 flex-1 text-center py-1.5 rounded-full text-xs font-['Poppins'] font-bold tracking-wide transition-colors duration-300 #{is_teammates ? 'text-slate-500 hover:text-indigo-600' : 'text-white'}" do %>
              World
            <% end %>

            <% if user_signed_in? %>
              <%= link_to fragments_path(filter: 'teammates'), 
                  data: { 
                    action: "click->top-tabs#switchToTeammates", 
                    turbo_action: "advance",
                    turbo_frame: "home_content",
                    top_tabs_target: "teammatesLink" # â˜…ã“ã“ã‚’è¿½åŠ 
                  },
                  class: "relative z-10 flex-1 text-center py-1.5 rounded-full text-xs font-['Poppins'] font-bold tracking-wide transition-colors duration-300 #{is_teammates ? 'text-white' : 'text-slate-500 hover:text-amber-600'}" do %>
                Teammates
              <% end %>
            <% else %>
              <span class="relative z-10 flex-1 text-center py-1.5 text-xs font-bold text-slate-400 cursor-not-allowed opacity-50">
                Teammates ðŸ”’
              </span>
            <% end %>
          </div>
        </div>
      
      </div>

      <% if @daily_prompt %>
        <div class="flex-1 flex flex-col md:flex-row md:items-center md:justify-end gap-3">
          
          <%= link_to prompts_path, class: "group flex items-center justify-center gap-2 px-4 py-2 bg-white border border-slate-200 rounded-full text-xs font-bold text-slate-500 hover:text-indigo-600 hover:border-indigo-200 transition-colors shadow-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3.5 h-3.5 group-hover:-translate-y-0.5 transition-transform">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5m8.25 3.251l0 6.25m-3-3l3 3l3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
            </svg>
            <span class="hidden md:inline">Archive</span>
          <% end %>

          <div class="inline-flex items-center gap-3 bg-white border border-indigo-100 p-1.5 pr-4 rounded-full shadow-sm hover:shadow-md hover:border-indigo-200 transition-all group">
            
            <div class="bg-indigo-50 text-indigo-600 px-3 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-wider flex items-center gap-2">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
              </span>
              Daily Prompt
            </div>

            <div class="flex flex-col md:flex-row md:items-center gap-1 md:gap-3">
              <span class="font-['Poppins'] font-bold text-slate-800 text-sm line-clamp-1">
                "<%= @daily_prompt.content %>"
              </span>
              
              <%= link_to new_fragment_path(prompt_id: @daily_prompt.id), class: "text-[10px] font-bold text-indigo-500 hover:text-indigo-700 underline decoration-indigo-200 hover:decoration-indigo-500 underline-offset-2 transition-all whitespace-nowrap" do %>
                Create This â†’
              <% end %>
            </div>

          </div>
        </div>
      <% end %>

    </div>

  </div>


  <%= turbo_frame_tag "home_content" do %>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-3 w-full px-4 md:px-0">
      
      <% @fragments.each do |fragment| %>
        
        <div class="group relative aspect-square bg-slate-200 rounded-xl overflow-hidden cursor-pointer shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          
          <% if fragment.image.attached? %>
            <%= image_tag fragment.image, class: "w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-110" %>
          <% else %>
            <div class="w-full h-full flex flex-col items-center justify-center bg-slate-100 text-slate-300">
              <span class="font-['Poppins'] font-bold text-xl">?</span>
            </div>
          <% end %>

          <div class="absolute top-2 right-2 z-20 flex flex-col gap-1 pointer-events-none">
            <% if fragment.private_view? %>
              <div class="bg-black/60 backdrop-blur text-white w-5 h-5 flex items-center justify-center rounded-full border border-white/20 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-2.5 h-2.5"><path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" /></svg>
              </div>
            <% elsif fragment.teammates_view? %>
              <div class="bg-amber-500/90 text-white w-5 h-5 flex items-center justify-center rounded-full border border-white/20 shadow-sm">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-2.5 h-2.5">
                  <path d="M11 5a3 3 0 11-6 0 3 3 0 016 0zM2.615 16.428a1.224 1.224 0 01-.569-1.175 6.002 6.002 0 0111.908 0c.058.467-.172.92-.57 1.174A9.953 9.953 0 017 18a9.953 9.953 0 01-4.385-1.572zM16.25 5.75a.75.75 0 00-1.5 0v2h-2a.75.75 0 000 1.5h2v2a.75.75 0 001.5 0v-2h2a.75.75 0 000-1.5h-2v-2z" />
                </svg>
              </div>
            <% end %>
          </div>

          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/10 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-end p-3 z-10">
            
            <h3 class="text-white font-['Poppins'] font-bold text-xs line-clamp-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 drop-shadow-md leading-tight mb-1">
              <%= fragment.title.presence || "Untitled" %>
            </h3>
            
            <div class="flex items-center justify-between mt-1 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 delay-75">
              <%= link_to user_profile_path(username: fragment.user.username), class: "flex items-center gap-1.5 group/user relative z-20 hover:opacity-80 transition-opacity", data: { turbo_frame: "_top" } do %>
                <div class="w-4 h-4 rounded-full bg-white/20 backdrop-blur flex items-center justify-center text-[7px] text-white font-bold border border-white/30">
                  <%= fragment.user.username.first.upcase rescue "?" %>
                </div>
                <span class="text-[9px] text-white/90 font-['Space_Grotesk'] truncate max-w-[60px]">@<%= fragment.user.username %></span>
              <% end %>

              <% if user_signed_in? %>
                <div class="scale-75 relative z-20 text-white origin-right">
                  <%= render 'likes/like_button', fragment: fragment %>
                </div>
              <% end %>
            </div>

            <%= link_to "", fragment, class: "absolute inset-0 z-0", data: { turbo_frame: "_top" } %>
          </div>

        </div>
      <% end %>
    </div>

    <% if @fragments.empty? %>
      <div class="mt-40 flex flex-col items-center justify-center text-center opacity-60">
        <p class="font-['Poppins'] text-slate-500 font-medium text-sm">No drops yet.</p>
      </div>
    <% end %>

  <% end %>
</div>