<div class="max-w-5xl mx-auto md:py-10">
  
  <div class="mb-6">
    <%= link_to :back, class: "inline-flex items-center gap-2 text-sm font-['Poppins'] text-slate-500 hover:text-indigo-600 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back
    <% end %>
  </div>

  <div class="bg-white rounded-[30px] shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
    <div class="grid md:grid-cols-2 gap-0 min-h-[500px]">
      
      <div class="bg-slate-50/50 border-b md:border-b-0 md:border-r border-slate-100 flex flex-col relative z-10"
           data-controller="color-picker palette" 
           data-color-picker-url-value="<%= fragment_colors_path(@fragment) %>"
           data-action="mouseleave->palette#reset">
        
        <div class="relative flex items-center justify-center p-10 flex-1 min-h-[400px]">
          <% if @fragment.image.attached? %>
            <%= image_tag @fragment.image, 
                class: "w-auto h-auto max-w-full max-h-[60vh] object-contain shadow-2xl shadow-indigo-900/10 rounded-lg transform transition-transform duration-500",
                data: { color_picker_target: "image" },
                crossorigin: "anonymous" %>
          <% else %>
            <div class="flex flex-col items-center justify-center text-slate-300">
              <span class="font-['Poppins'] font-bold text-4xl mb-2">?</span>
              <span class="text-sm">No Image</span>
            </div>
          <% end %>

          <div class="absolute top-6 left-6 flex gap-2 pointer-events-none">
            <% if @fragment.private_view? %>
               <span class="bg-slate-900/90 backdrop-blur text-white px-3 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-widest border border-white/10 shadow-lg">Private</span>
            <% elsif @fragment.teammates_view? %>
               <span class="bg-white/80 backdrop-blur text-indigo-600 px-3 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-widest border border-white/50 shadow-lg">Teammates</span>
            <% end %>
          </div>
        </div>

        <% if @fragment.user == current_user %>
          <div class="relative px-6 pb-6 pt-2 w-full">
            
            <div class="w-full bg-white/80 backdrop-blur-xl rounded-[24px] border border-white shadow-[0_8px_30px_rgb(0,0,0,0.04)] p-3 flex items-start gap-4 transition-all hover:shadow-[0_8px_30px_rgb(0,0,0,0.08)]">
              
              <button 
                data-color-picker-target="button"
                data-action="click->color-picker#toggle"
                class="relative group shrink-0 w-12 h-12 rounded-[20px] bg-slate-100 text-slate-400 hover:bg-pink-50 hover:text-pink-500 transition-all duration-300 flex items-center justify-center shadow-inner overflow-hidden active:scale-90 mt-1">
                <svg data-color-picker-target="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 relative z-10 transition-transform group-hover:rotate-12">
                  <path d="M19.5 4.5l-3 3 1.5 1.5L21 6a2.121 2.121 0 00-3-3h-1.5zM15 7.5l-1.5-1.5L4.5 15V18h3l9-9zM3 21h3.75L3 17.25V21z" />
                </svg>
              </button>

              <div class="w-px self-stretch bg-slate-100 mx-1"></div>

              <div class="flex-1 flex flex-col justify-center overflow-hidden py-1">
                <div class="flex items-center justify-between mb-1 px-1 shrink-0 relative z-20">
                   <div class="flex items-center gap-2">
                     <span data-palette-target="placeholder" class="text-[10px] font-['Space_Grotesk'] font-bold text-slate-300 uppercase tracking-[0.2em]">Colors</span>
                     <span data-palette-target="display" class="text-[10px] font-['Space_Grotesk'] font-bold text-slate-900 uppercase tracking-widest opacity-0 transition-all duration-200">#FFFFFF</span>
                   </div>
                   <span data-color-picker-target="status" class="hidden text-[9px] font-bold text-pink-500 animate-pulse tracking-widest bg-pink-50 px-2 py-0.5 rounded-full">PICKING ON</span>
                </div>

                <div class="w-full max-h-40 overflow-y-auto custom-scrollbar px-1 pt-12 -mt-8 pb-4 relative z-10">
                  <div id="color_palette" class="flex flex-wrap items-start gap-2 w-full content-start">
                    <%= render partial: "fragment_colors/color", collection: @fragment.fragment_colors %>
                  </div>
                </div>
              </div>

            </div>
          </div>
        <% end %>
      </div>

      <div class="p-8 md:p-12 flex flex-col items-start justify-start h-full bg-white text-left overflow-y-auto max-h-[80vh] custom-scrollbar relative z-30">
        
        <div class="flex items-center gap-3 mb-8 w-full border-b border-slate-50 pb-6">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600 font-bold font-['Poppins'] text-lg shrink-0 border border-indigo-100">
            <%= @fragment.user.username.first.upcase %>
          </div>
          
          <div class="flex flex-col items-start">
            <%= link_to user_profile_path(@fragment.user.username), class: "font-['Poppins'] font-bold text-lg text-slate-900 hover:text-indigo-600 transition-colors leading-none" do %>
              @<%= @fragment.user.username %>
            <% end %>
            <p class="text-xs text-slate-400 mt-1.5 font-['Space_Grotesk'] tracking-wide">
              <%= @fragment.created_at.strftime("%Y.%m.%d %H:%M") %>
            </p>
          </div>
        </div>
        
        <div class="w-full text-left mb-8">
          <h1 class="text-2xl md:text-3xl font-['Poppins'] font-bold text-slate-900 mb-4 leading-tight">
            <%= @fragment.title.presence || "Untitled" %>
          </h1>

          <% if @fragment.description.present? %>
            <div data-controller="read-more">
              <p data-read-more-target="content" class="text-base md:text-lg text-slate-600 font-['Inter'] leading-relaxed whitespace-pre-wrap line-clamp-3"><%= @fragment.description %></p>
              <button data-read-more-target="button" data-action="click->read-more#expand" class="hidden mt-2 text-xs font-['Poppins'] font-bold text-slate-400 hover:text-indigo-600 transition-colors flex items-center gap-1">
                <span>Read more</span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" /></svg>
              </button>
            </div>
          <% else %>
            <p class="text-slate-300 italic text-sm">No description provided.</p>
          <% end %>
        </div>

        <div class="w-full py-6 flex items-center gap-4 mt-auto border-t border-slate-50 pt-6">
          <% if user_signed_in? %>
            <%= render 'likes/like_button', fragment: @fragment %>
          <% else %>
            <div class="p-2 text-slate-200"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg></div>
          <% end %>

          <% if user_signed_in? && current_user != @fragment.user %>
            <div class="h-8 w-px bg-slate-100 mx-2"></div>
            <%= link_to new_fragment_letter_path(@fragment), class: "group flex items-center gap-2 text-slate-400 hover:text-indigo-600 transition-colors" do %>
              <div class="p-2 rounded-full group-hover:bg-indigo-50 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
              </div>
              <span class="text-xs font-['Poppins'] font-bold tracking-widest opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300">WRITE LETTER</span>
            <% end %>
          <% end %>
        </div>
          
        <div class="mt-8 flex items-center justify-center gap-4 w-full">
          
          <% if user_signed_in? && current_user == @fragment.user %>
            <%# --- 追加: See Timeline ボタン --- %>
            <%= link_to timeline_fragment_path(@fragment), class: "group flex-1 max-w-[200px] border border-slate-200 text-slate-400 rounded-full py-3 flex items-center justify-center gap-2 hover:bg-slate-50 hover:text-slate-900 hover:border-slate-300 transition-all duration-300 active:scale-[0.98]" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 opacity-40 group-hover:opacity-100">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="font-['Poppins'] font-bold tracking-wider text-xs uppercase">See Timeline</span>
            <% end %>

            <%= link_to new_fragment_path(parent_id: @fragment.id), class: "group flex-1 max-w-[200px] relative bg-slate-900 text-white rounded-full py-3 flex items-center justify-center gap-2 overflow-hidden shadow-lg shadow-slate-900/20 hover:shadow-slate-900/40 hover:-translate-y-0.5 transition-all duration-300 active:scale-[0.98]" do %>
              <div class="absolute inset-0 bg-indigo-600 translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-[cubic-bezier(0.23,1,0.32,1)]"></div>
              
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" 
                   class="w-5 h-5 relative z-10 transition-transform duration-500 ease-out group-hover:rotate-180">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
              <span class="relative z-10 font-['Poppins'] font-bold tracking-wider text-sm">Version Up</span>
            <% end %>
          <% end %>
          
        </div>

        <div class="mt-6 border-t border-slate-100 pt-6 w-full">
          <% if user_signed_in? && current_user == @fragment.user %>
            <%= link_to select_comparisons_path(fragment_id: @fragment.id), class: "group w-full relative block overflow-hidden rounded-xl bg-slate-50 border border-slate-200 hover:border-indigo-300 hover:bg-white transition-all duration-300" do %>
              
              <div class="px-6 py-4 flex items-center justify-between relative z-10">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 rounded-lg bg-white border border-slate-200 flex items-center justify-center text-slate-400 group-hover:text-indigo-600 group-hover:border-indigo-100 group-hover:shadow-md transition-all duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                    </svg>
                  </div>
                  
                  <div class="flex flex-col items-start">
                    <span class="text-[10px] font-bold tracking-widest text-slate-400 uppercase group-hover:text-indigo-400 transition-colors">Lab Tool</span>
                    <span class="font-['Poppins'] font-bold text-sm text-slate-700 group-hover:text-indigo-600 transition-colors">Compare in Studio</span>
                  </div>
                </div>

                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 text-slate-300 group-hover:text-indigo-400 group-hover:translate-x-1 transition-all">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                </svg>
              </div>

              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/80 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-700 ease-in-out"></div>
            <% end %>
          <% end %>
        </div>

        <% if user_signed_in? && current_user == @fragment.user %>
          <div class="mt-4 flex gap-4 w-full">
            <%= link_to "Edit Fragment", edit_fragment_path(@fragment), class: "flex-1 py-3 border border-slate-200 rounded-xl text-center text-sm font-['Poppins'] font-medium text-slate-600 hover:bg-slate-50 hover:border-slate-300 transition-colors" %>
            <%= link_to "Delete", @fragment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "flex-1 py-3 border border-red-100 rounded-xl text-center text-sm font-['Poppins'] font-medium text-red-500 hover:bg-red-50 transition-colors" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>