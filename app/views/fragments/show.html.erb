<div class="max-w-5xl mx-auto md:py-10">
  
  <div class="mb-6">
    <%= link_to :back, class: "inline-flex items-center gap-2 text-sm font-['Poppins'] text-slate-500 hover:text-indigo-600 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Back
    <% end %>
  </div>

  <div class="bg-white rounded-[30px] shadow-xl shadow-slate-200/50 border border-slate-100 overflow-hidden">
    <div class="grid md:grid-cols-2 gap-0 min-h-[500px]">
      
      <div class="bg-white relative flex items-center justify-center p-8 md:p-12 border-b md:border-b-0 md:border-r border-slate-50">
        <% if @fragment.image.attached? %>
          <%= image_tag @fragment.image, class: "w-auto h-auto max-w-full max-h-[70vh] object-contain shadow-2xl rounded-sm transform hover:scale-[1.02] transition-transform duration-500" %>
        <% else %>
          <div class="flex flex-col items-center justify-center text-indigo-300">
            <span class="font-['Poppins'] font-bold text-4xl mb-2">?</span>
            <span class="text-sm">No Image</span>
          </div>
        <% end %>

        <% if @fragment.private_view? %>
           <div class="absolute top-6 left-6 bg-black/90 text-white w-8 h-8 flex items-center justify-center rounded-lg shadow-xl backdrop-blur-md border border-white/20 z-10">
             <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4"><path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" /></svg>
           </div>
        <% elsif @fragment.teammates_view? %>
           <div class="absolute top-6 left-6 z-10">
             <div class="bg-amber-400 text-white px-3 py-1.5 rounded-lg shadow-xl shadow-amber-200 border border-white/30 flex items-center gap-2">
               <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3">
                 <path d="M13 10a1 1 0 11-2 0 1 1 0 012 0z" />
                 <path fill-rule="evenodd" d="M12.293 2.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 8H7a1 1 0 00-1 1v6a1 1 0 11-2 0V9a3 3 0 013-3h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
               </svg>
               <span class="text-[10px] font-bold font-['Poppins'] tracking-widest">TEAM ONLY</span>
             </div>
           </div>
        <% end %>
      </div>

      <div class="p-8 md:p-12 flex flex-col items-start justify-start h-full bg-white text-left">
        
        <div class="flex items-center gap-3 mb-6 w-full">
          <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center text-indigo-600 font-bold font-['Poppins'] text-lg shrink-0 border border-indigo-100">
            <%= @fragment.user.username.first.upcase %>
          </div>
          
          <div class="flex flex-col items-start">
            <%= link_to user_profile_path(@fragment.user.username), class: "font-['Poppins'] font-bold text-lg text-slate-900 hover:text-indigo-600 transition-colors leading-none" do %>
              @<%= @fragment.user.username %>
            <% end %>
            <p class="text-xs text-slate-400 mt-1.5 font-['Space_Grotesk'] tracking-wide">
              <%= @fragment.created_at.strftime("%Y.%m.%d %H:%M") %>
            </p>
          </div>
        </div>

        <div class="w-full text-left" data-controller="read-more">
          
          <h1 class="text-2xl md:text-3xl font-['Poppins'] font-bold text-slate-900 mb-4 leading-tight">
            <%= @fragment.title.presence || "Untitled" %>
          </h1>

          <% if @fragment.description.present? %>
            <p data-read-more-target="content" class="text-base md:text-lg text-slate-600 font-['Inter'] leading-relaxed whitespace-pre-wrap line-clamp-3"><%= @fragment.description %></p>
            
            <button data-read-more-target="button" data-action="click->read-more#expand" class="hidden mt-2 text-xs font-['Poppins'] font-bold text-slate-400 hover:text-indigo-600 transition-colors flex items-center gap-1">
              <span>Read more</span>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" /></svg>
            </button>
          <% else %>
            <p class="text-slate-300 italic text-sm">No description provided.</p>
          <% end %>
        </div>

        <div class="w-full py-6 flex items-center gap-4">
          <% if user_signed_in? %>
            <%= render 'likes/like_button', fragment: @fragment %>
          <% else %>
            <div class="p-2">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-slate-200">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
               </svg>
             </div>
          <% end %>

          <% if user_signed_in? && current_user != @fragment.user %>
            <div class="h-8 w-px bg-slate-100 mx-2"></div> <%= link_to new_fragment_letter_path(@fragment), class: "group flex items-center gap-2 text-slate-400 hover:text-indigo-600 transition-colors" do %>
              <div class="p-2 rounded-full group-hover:bg-indigo-50 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </div>
              <span class="text-xs font-['Poppins'] font-bold tracking-widest opacity-0 group-hover:opacity-100 -translate-x-2 group-hover:translate-x-0 transition-all duration-300">
                WRITE LETTER
              </span>
            <% end %>
          <% end %>
        </div>

        <% if user_signed_in? && current_user == @fragment.user %>
          <div class="mt-auto pt-10 border-t border-slate-50 flex gap-4 w-full">
            <%= link_to "Edit Fragment", edit_fragment_path(@fragment), class: "flex-1 py-3 border border-slate-200 rounded-xl text-center text-sm font-['Poppins'] font-medium text-slate-600 hover:bg-slate-50 hover:border-slate-300 transition-colors" %>
            
            <%= link_to "Delete", @fragment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "flex-1 py-3 border border-red-100 rounded-xl text-center text-sm font-['Poppins'] font-medium text-red-500 hover:bg-red-50 transition-colors" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>