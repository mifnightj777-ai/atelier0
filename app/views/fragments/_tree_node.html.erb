<li>
  <div class="tree-card-wrapper group">
    <%= link_to fragment_path(node), class: "block relative transition-all duration-300 hover:-translate-y-2 group-hover:shadow-xl rounded-2xl bg-white" do %>
      
      <div class="relative w-24 h-24 md:w-32 md:h-32 rounded-2xl overflow-hidden bg-slate-100 transition-all duration-300
                  <%= node.id == @current_fragment_id ? 'ring-4 ring-indigo-400 ring-offset-4 shadow-lg shadow-indigo-200' : 'shadow-sm hover:shadow-md' %>">
        
        <% if node.image.attached? %>
          <%= image_tag node.image, class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
        <% else %>
          <div class="flex flex-col items-center justify-center text-slate-300 w-full h-full">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 mb-1">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 11.75 0z" />
            </svg>
            <span class="text-[10px] font-bold">No Image</span>
          </div>
        <% end %>

        <div class="absolute inset-0 bg-slate-900/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col items-center justify-center p-2 text-white backdrop-blur-[2px]">
          <p class="font-['Poppins'] font-bold text-xs line-clamp-2 mb-1"><%= node.title.presence || "Untitled" %></p>
          <p class="font-['Space_Grotesk'] text-[10px] text-indigo-200"><%= node.created_at.strftime("%Y.%m.%d") %></p>
        </div>
      </div>

      <% if node.id == @current_fragment_id %>
        <div class="absolute -bottom-2 left-1/2 -translate-x-1/2 bg-indigo-500 text-white text-[10px] font-bold px-3 py-0.5 rounded-full shadow-sm whitespace-nowrap tracking-wider">
          YOU ARE HERE
        </div>
      <% end %>

    <% end %>
  </div>

  <% if node.children.any? %>
    <ul>
      <% node.children.each do |child| %>
        <%= render partial: "fragments/tree_node", locals: { node: child } %>
      <% end %>
    </ul>
  <% end %>
</li>