<div class="max-w-3xl mx-auto py-12 px-6">
  
  <div class="flex items-end justify-between mb-12">
    <div>
      <h1 class="font-['Poppins'] text-4xl font-bold text-slate-900 tracking-tight">Mailbox.</h1>
      <p class="text-slate-400 text-xs mt-2 font-['Space_Grotesk'] tracking-widest uppercase">
        Private Letters / <%= @letters.count %> Received
      </p>
    </div>
  </div>

  <div class="space-y-4">
    <% @letters.each do |letter| %>
      
      <details class="group bg-white rounded-3xl border border-slate-100 shadow-[0_2px_15px_rgb(0,0,0,0.02)] open:shadow-[0_10px_40px_rgb(0,0,0,0.06)] open:border-indigo-100 transition-all duration-500 overflow-hidden">
        
        <summary class="list-none cursor-pointer p-6 flex items-center gap-5 hover:bg-slate-50/80 transition-colors relative">
          
          <div class="absolute right-6 top-1/2 -translate-y-1/2 text-slate-300 group-open:rotate-180 transition-transform duration-500">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" /></svg>
          </div>

          <div class="shrink-0 w-14 h-14 rounded-2xl bg-indigo-50 text-indigo-600 border border-indigo-100 flex items-center justify-center font-['Poppins'] font-bold text-xl shadow-sm group-open:bg-indigo-600 group-open:text-white transition-colors duration-300">
            <%= letter.sender.username.first.upcase %>
          </div>

          <div class="flex-1 pr-8">
            <div class="flex justify-between items-start mb-0.5">
              <span class="font-['Poppins'] font-bold text-slate-900 text-lg">
                @<%= letter.sender.username %>
              </span>
              <span class="text-[10px] text-slate-300 font-['Space_Grotesk'] tracking-widest uppercase mt-1.5">
                <%= time_ago_in_words(letter.created_at) %> ago
              </span>
            </div>
            
            <h3 class="text-sm font-medium text-slate-500 group-open:text-indigo-600 transition-colors truncate">
              <%= letter.subject.presence || "No Subject" %>
            </h3>
          </div>
        </summary>

        <div class="px-6 pb-6 pt-0 animate-fade-in-down">
          <div class="p-8 bg-slate-50/50 rounded-2xl border border-slate-100/50">
            
            <div class="mb-6 pb-4 border-b border-slate-200/50 flex items-center gap-2">
              <span class="text-[10px] font-bold text-slate-400 uppercase tracking-wider">Regarding:</span>
              <%= link_to truncate(letter.fragment.title, length: 30), fragment_path(letter.fragment), class: "text-xs font-bold text-indigo-600 hover:underline decoration-1 underline-offset-4" %>
            </div>

            <div class="prose prose-slate prose-sm max-w-none font-['Inter'] leading-relaxed whitespace-pre-wrap text-slate-700 mb-8">
              <%= letter.body %>
            </div>

            <div class="flex justify-end items-center gap-4 pt-4 border-t border-slate-200/50">
              <div class="text-right mr-4">
                <p class="text-[10px] text-slate-400 font-['Space_Grotesk'] uppercase tracking-widest">Sincerely,</p>
                <p class="font-['Poppins'] font-bold text-slate-800 text-xs">@<%= letter.sender.username %></p>
              </div>

              <% if letter.pending? %>
                <%= button_to letter_path(letter), method: :patch, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-['Poppins'] font-bold text-xs px-6 py-3 rounded-full shadow-lg shadow-indigo-200 transition-all flex items-center gap-2 hover:-translate-y-0.5" do %>
                  <span>Accept & Chat</span>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
                <% end %>
              <% elsif letter.accepted? %>
                <% room = Room.between(current_user, letter.sender).first %>
                <% if room %>
                  <%= link_to room_path(room), class: "group flex items-center gap-2 text-indigo-600 bg-indigo-50 px-5 py-2.5 rounded-full font-bold text-xs hover:bg-indigo-100 transition-colors" do %>
                    <span>Open Chat</span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-3 h-3 group-hover:translate-x-1 transition-transform"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
                  <% end %>
                <% end %>
              <% end %>
            </div>

          </div>
        </div>

      </details>

    <% end %>

    <% if @letters.empty? %>
      <div class="py-24 text-center">
        <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-300">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" /></svg>
        </div>
        <p class="font-['Poppins'] text-slate-400 font-bold">No letters yet.</p>
      </div>
    <% end %>
  </div>
</div>