<div class="min-h-screen bg-slate-50 flex items-center justify-center p-6">
  
  <div class="w-full max-w-2xl bg-white shadow-2xl shadow-indigo-100/50 rounded-2xl overflow-hidden border border-slate-100 animate-fade-in-up relative">
    
    <%= link_to fragment_path(@fragment), class: "absolute top-6 right-6 text-slate-300 hover:text-slate-500 transition-colors z-10" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>

    <div class="flex flex-col md:flex-row h-full min-h-[600px]">
      
      <div class="w-full md:w-1/3 bg-indigo-50 p-8 md:p-10 flex flex-col justify-between border-b md:border-b-0 md:border-r border-indigo-100">
        <div>
          <span class="text-[10px] font-['Space_Grotesk'] font-bold text-indigo-400 tracking-widest uppercase mb-2 block">
            Recipient
          </span>
          <div class="flex items-center gap-3 mb-8">
            <div class="w-10 h-10 rounded-full bg-white text-indigo-600 flex items-center justify-center font-['Poppins'] font-bold border border-indigo-100 shadow-sm">
              <%= @fragment.user.username.first.upcase %>
            </div>
            <span class="font-['Poppins'] font-bold text-slate-700 text-lg">
              @<%= @fragment.user.username %>
            </span>
          </div>

          <span class="text-[10px] font-['Space_Grotesk'] font-bold text-indigo-400 tracking-widest uppercase mb-2 block">
            Regarding
          </span>
          <div class="bg-white p-3 rounded-xl border border-indigo-100 shadow-sm">
            <% if @fragment.image.attached? %>
              <%= image_tag @fragment.image, class: "w-full aspect-square object-cover rounded-lg mb-2 opacity-80" %>
            <% end %>
            <p class="font-['Poppins'] font-bold text-slate-800 text-xs line-clamp-2">
              <%= @fragment.title.presence || "Untitled" %>
            </p>
          </div>
        </div>

        <div class="mt-8 md:mt-0">
          <p class="text-xs text-indigo-400/80 font-['Inter'] leading-relaxed">
            This letter will be sent privately. Only you and the author can read it.
          </p>
        </div>
      </div>

      <div class="w-full md:w-2/3 p-8 md:p-12 relative">
        
        <%= form_with(model: [@fragment, @letter], local: true, class: "h-full flex flex-col") do |f| %>
          
          <div class="mb-6">
            <%= f.text_field :subject, placeholder: "Subject (Optional)", class: "w-full bg-transparent border-0 border-b border-slate-200 px-0 py-2 text-lg font-['Poppins'] font-bold text-slate-800 placeholder-slate-300 focus:ring-0 focus:border-indigo-500 transition-colors" %>
          </div>

          <div class="flex-1 mb-8">
            <%= f.text_area :body, placeholder: "Write your message here...", class: "w-full h-full bg-transparent border-none p-0 text-sm md:text-base font-['Inter'] text-slate-600 placeholder-slate-300 focus:ring-0 resize-none leading-relaxed tracking-wide" %>
          </div>

          <div class="flex justify-end">
            <%= f.button class: "bg-slate-900 text-white font-['Poppins'] font-bold text-xs px-8 py-3 rounded-full hover:bg-indigo-600 hover:shadow-lg hover:shadow-indigo-500/30 transition-all flex items-center gap-2 group" do %>
              <span>SEND QUIETLY</span>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:translate-x-1 transition-transform">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
              </svg>
            <% end %>
          </div>

        <% end %>
      </div>

    </div>
  </div>
</div>

<style>
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  .animate-fade-in-up { animation: fadeInUp 0.6s ease-out forwards; }
</style>