<style>
  /* --- 共通アニメーション --- */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  @keyframes slowFadeIn {
    from { opacity: 0; transform: translateY(30px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  /* --- ヒーローセクション装飾 --- */
  .hero-float-item {
    position: absolute;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    opacity: 0; /* JSで表示制御 */
    animation: float 6s ease-in-out infinite;
    transition: transform 0.1s ease-out; /* パララックス用 */
    pointer-events: none; /* 文字の邪魔をしないように */
  }
  /* 浮遊アイテムごとの遅延設定 */
  .hero-item-1 { animation-delay: 0s; }
  .hero-item-2 { animation-delay: 1s; }
  .hero-item-3 { animation-delay: 2s; }
  .hero-item-4 { animation-delay: 3s; }

  .fade-in { 
    animation: slowFadeIn 1s cubic-bezier(0.2, 0.8, 0.2, 1) forwards; 
    opacity: 0;
  }
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.3s; }
  .delay-3 { animation-delay: 0.5s; }

  /* --- 3Dカードエフェクト --- */
  .card-container {
    perspective: 1000px; /* 3D空間の奥行き */
  }
  .feature-card {
    transition: all 0.1s ease-out; /* 即座に反応するように */
    transform-style: preserve-3d;
    backface-visibility: hidden;
  }
  
  /* カードの中身が浮き出るように */
  .card-content {
    transform: translateZ(20px);
  }
  
  /* グレア（光沢）エフェクト */
  .card-glare {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    border-radius: 40px;
    background: radial-gradient(circle at 50% 50%, rgba(255,255,255,0.4), transparent 70%);
    opacity: 0;
    pointer-events: none;
    mix-blend-mode: overlay;
    transition: opacity 0.3s;
  }
  .feature-card:hover .card-glare {
    opacity: 1;
  }

  /* 画像コンテナのスタイル調整 */
  .image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 16px;
    background: #f8fafc;
  }

  /* スクロール出現アニメーション */
  .reveal-card {
    opacity: 0;
    transform: translateY(60px) rotateX(10deg);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .reveal-card.is-visible {
    opacity: 1;
    transform: translateY(0) rotateX(0);
  }
</style>

