<%= form_with(model: collection, class: "space-y-8") do |f| %>
  
  <div class="space-y-4">
    <div>
      <%= f.label :title, class: "block text-xs font-['Space_Grotesk'] font-bold text-slate-400 uppercase tracking-widest mb-2" %>
      <%= f.text_field :title, placeholder: "Collection Name", class: "w-full bg-slate-50 border-none rounded-xl px-5 py-4 text-xl font-['Poppins'] font-bold text-slate-900 placeholder-slate-300 focus:ring-2 focus:ring-indigo-100 focus:bg-white transition-all" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-xs font-['Space_Grotesk'] font-bold text-slate-400 uppercase tracking-widest mb-2" %>
      <%= f.text_area :description, rows: 4, placeholder: "What is this collection about?", class: "w-full bg-slate-50 border-none rounded-xl px-5 py-4 text-sm font-['Inter'] text-slate-700 placeholder-slate-300 focus:ring-2 focus:ring-indigo-100 focus:bg-white transition-all resize-none" %>
    </div>

    <div>
      <span class="block text-xs font-['Space_Grotesk'] font-bold text-slate-400 uppercase tracking-widest mb-3">Visibility</span>
      <div class="flex gap-6 items-center">
         
         <label class="cursor-pointer flex items-center gap-2 group">
           <%= f.radio_button :visibility, :view_private, class: "peer sr-only" %>
           <div class="w-4 h-4 rounded-full border-2 border-slate-300 peer-checked:border-slate-900 peer-checked:bg-slate-900 transition-all flex items-center justify-center">
             <div class="w-1.5 h-1.5 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
           </div>
           <span class="text-sm font-['Poppins'] font-bold text-slate-400 peer-checked:text-slate-900 transition-colors">Private</span>
         </label>

         <label class="cursor-pointer flex items-center gap-2 group">
           <%= f.radio_button :visibility, :view_teammates, class: "peer sr-only" %>
           <div class="w-4 h-4 rounded-full border-2 border-slate-300 peer-checked:border-[#5D5FEF] peer-checked:bg-[#5D5FEF] transition-all flex items-center justify-center">
             <div class="w-1.5 h-1.5 rounded-full bg-white opacity-0 peer-checked:opacity-100"></div>
           </div>
           <span class="text-sm font-['Poppins'] font-bold text-slate-400 peer-checked:text-[#5D5FEF] transition-colors">Teammates</span>
         </label>

      </div>
    </div>
  </div>

  <div class="pt-4 flex justify-end">
    <%= f.button class: "bg-slate-900 text-white font-['Poppins'] font-bold text-xs px-8 py-3 rounded-full hover:bg-indigo-600 hover:shadow-lg hover:shadow-indigo-200 transition-all flex items-center gap-2" do %>
      <span>Save Collection</span>
    <% end %>
  </div>

<% end %>