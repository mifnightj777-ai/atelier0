<div class="min-h-screen bg-slate-50/50 py-20 px-4">
  <div class="max-w-2xl mx-auto">
    
    <div class="mb-10 text-center">
      <%= link_to collection_path(@collection), class: "inline-flex items-center gap-2 text-slate-400 hover:text-indigo-600 transition-colors mb-6 text-xs font-bold uppercase tracking-widest" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
        Back to ZINE
      <% end %>
      
      <h1 class="text-3xl md:text-4xl font-['Poppins'] font-bold text-slate-900">
        Edit Collection
      </h1>
      <p class="text-slate-500 mt-2 text-sm">
        Update your ZINE details and visibility.
      </p>
    </div>

    <div class="bg-white rounded-3xl shadow-xl shadow-slate-200/60 border border-slate-100 p-8 md:p-10">
      <%= render "form", collection: @collection %>
    </div>

  </div>
</div>