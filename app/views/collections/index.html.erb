<div class="w-full max-w-7xl mx-auto px-4 py-16">
  
  <%# --- シンプルなタイトルのみのヘッダー --- %>
  <div class="flex items-center justify-between mb-12 px-4">
    <div>
      <h1 class="font-['Poppins'] text-4xl font-bold text-slate-900 tracking-tight">Your ZINEs.</h1>
      <p class="text-slate-400 text-xs mt-2 font-['Space_Grotesk'] tracking-widest uppercase">
        Management / <%= @collections.count %> Collections
      </p>
    </div>
    <%= link_to new_collection_path, class: "px-6 py-2 bg-slate-900 text-white rounded-full font-['Poppins'] font-bold text-xs hover:bg-indigo-600 transition-all shadow-lg" do %>
      NEW ZINE
    <% end %>
  </div>

  <%# --- コレクション一覧（グリッド形式） --- %>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-x-8 gap-y-16 px-4">
    <% @collections.each do |collection| %>
      <%# 自分が見る用なので、Privateも含めたFragmentsを取得 %>
      <% visible_previews = collection.fragments %>

      <div class="flex flex-col items-center">
        <%= link_to collection_path(collection), class: "group relative w-40 h-40 cursor-pointer" do %>
          <div class="relative w-40 h-40">
            <%# スタック奥 %>
            <div class="absolute inset-0 bg-white border border-slate-100 shadow-sm rounded-xl transform rotate-6 translate-x-2 translate-y-2 group-hover:rotate-12 transition-all duration-300 z-0 overflow-hidden">
               <% if visible_previews.offset(2).first&.image&.attached? %>
                 <%= image_tag visible_previews.offset(2).first.image, class: "w-full h-full object-cover opacity-50" %>
               <% else %>
                 <div class="w-full h-full bg-slate-50"></div>
               <% end %>
            </div>

            <%# スタック中 %>
            <div class="absolute inset-0 bg-white border border-slate-100 shadow-sm rounded-xl transform -rotate-3 translate-x-1 group-hover:-rotate-6 transition-all duration-300 z-10 overflow-hidden">
               <% if visible_previews.offset(1).first&.image&.attached? %>
                 <%= image_tag visible_previews.offset(1).first.image, class: "w-full h-full object-cover opacity-70" %>
               <% else %>
                 <div class="w-full h-full bg-slate-50"></div>
               <% end %>
            </div>

            <%# 表紙メイン %>
            <div class="absolute inset-0 bg-white border border-slate-200 shadow-md rounded-xl transform group-hover:-translate-y-2 group-hover:shadow-xl transition-all duration-300 z-20 overflow-hidden">
               <% if visible_previews.first&.image&.attached? %>
                 <%= image_tag visible_previews.first.image, class: "w-full h-full object-cover" %>
               <% else %>
                 <div class="w-full h-full bg-slate-50 flex items-center justify-center text-indigo-200">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                 </div>
               <% end %>
               
               <%# 非公開バッジ %>
               <% if collection.private_view? %>
                 <div class="absolute top-2 right-2 bg-black/50 text-white p-1 rounded-full backdrop-blur-md">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" /></svg>
                 </div>
               <% end %>
            </div>
          </div>

          <div class="mt-4 text-center">
            <h3 class="text-sm font-bold text-slate-800 group-hover:text-indigo-600 transition-colors line-clamp-1"><%= collection.title %></h3>
            <p class="text-[10px] text-slate-400 font-['Space_Grotesk'] mt-0.5"><%= visible_previews.count %> items</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>