<div class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6 lg:px-8 font-sans">
  <div class="max-w-5xl mx-auto"> <%# 幅を少し広げました %>
    
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-2xl font-bold text-slate-900">Registered Users</h1>
      <%= link_to admin_dashboard_path, class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium flex items-center gap-1" do %>
        <span>← Dashboard</span>
      <% end %>
    </div>

    <div class="bg-white shadow-sm rounded-2xl overflow-hidden border border-slate-200">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider w-20">
              ID
            </th>
            <%# ▼ 追加：ユーザーネームの列 %>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
              Username
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
              Email Address
            </th>
            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">
              Registered At
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-100">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                #<%= user.id %>
              </td>
              <%# ▼ 追加：@usernameを表示 %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold text-slate-800">
                @<%= user.username %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                <%= user.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-400">
                <%= user.created_at.strftime("%Y/%m/%d") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% if @users.empty? %>
        <div class="p-8 text-center text-slate-400 text-sm">
          まだユーザーはいません
        </div>
      <% end %>
    </div>

  </div>
</div>