<style>
  /* 全体の背景 */
  .admin-wrapper {
    background-color: #eef2ff;
    min-height: 100vh;
    font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  /* 中央のカード */
  .admin-card {
    background-color: #ffffff;
    width: 100%;
    max-width: 520px;
    border-radius: 32px;
    padding: 48px;
    box-shadow: 0 20px 40px -10px rgba(79, 70, 229, 0.15);
    text-align: center;
  }

  /* ヘッダーエリア */
  .header-area {
    margin-bottom: 40px;
  }

  .admin-title {
    font-size: 14px;
    font-weight: 700;
    color: #4338ca;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
    display: inline-block;
    background-color: #e0e7ff;
    padding: 6px 16px;
    border-radius: 50px;
  }

  .app-name {
    font-size: 24px;
    font-weight: 700;
    color: #1e1b4b;
    margin: 0;
  }

  /* グリッドレイアウト */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }

  /* リンクとして機能するように微調整 */
  .stat-link {
    text-decoration: none; /* 下線を消す */
    display: block; /* カード全体をクリック可能に */
  }

  .stat-box {
    border-radius: 24px;
    padding: 30px 15px;
    color: white;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%; /* 高さを揃える */
  }

  .stat-box:hover {
    transform: translateY(-4px);
    filter: brightness(1.05); /* ホバーで少し明るく */
  }

  .stat-box.users {
    background: linear-gradient(135deg, #4f46e5, #4338ca);
    box-shadow: 0 10px 25px -5px rgba(79, 70, 229, 0.4);
  }

  .stat-box.fragments {
    background: linear-gradient(135deg, #ec4899, #be185d);
    box-shadow: 0 10px 25px -5px rgba(236, 72, 153, 0.4);
  }

  .stat-label {
    font-size: 13px;
    opacity: 0.9;
    margin-bottom: 8px;
    display: block;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-size: 48px;
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.03em;
  }

  .stat-unit {
    font-size: 14px;
    font-weight: 500;
    margin-left: 2px;
    opacity: 0.8;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    color: #6366f1;
    font-weight: 600;
    text-decoration: none;
    border-radius: 16px;
    background-color: transparent;
    transition: all 0.2s ease;
  }

  .back-btn:hover {
    background-color: #f5f3ff;
    color: #4f46e5;
  }
</style>

<div class="admin-wrapper">
  <div class="admin-card">
    
    <div class="header-area">
      <div class="admin-title">Admin Dashboard</div>
      <h2 class="app-name">morphe0 Analytics</h2>
    </div>

    <div class="stats-grid">
      
      <%= link_to admin_users_path, class: "stat-link" do %>
        <div class="stat-box users">
          <span class="stat-label">Users</span>
          <div class="stat-value">
            <%= @users_count %><span class="stat-unit">人</span>
          </div>
          <span style="font-size: 10px; opacity: 0.7; margin-top: 5px;">Click to view list →</span>
        </div>
      <% end %>

      <div class="stat-box fragments">
        <span class="stat-label">Fragments</span>
        <div class="stat-value">
          <%= @fragments_count %><span class="stat-unit">個</span>
        </div>
      </div>

    </div>

    <%= link_to root_path, class: "back-btn" do %>
      <span>← Back to App</span>
    <% end %>
    
  </div>
</div>