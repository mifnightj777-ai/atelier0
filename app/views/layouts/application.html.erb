            <%= image_tag current_user.avatar, class: "w-full h-full object-cover group-hover:scale-110 transition-transform" %>
          <% else %>
            <div class="w-full h-full flex items-center justify-center bg-indigo-50 text-indigo-400 text-xs font-bold">
              <%= current_user.username.first.upcase %>
