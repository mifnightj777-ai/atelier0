            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12" />
          </svg>
        <% end %>

      <% else %>
        <%= link_to "Join", new_user_registration_path, class: "px-5 py-2 rounded-full font-bold text-indigo-600 hover:bg-indigo-50 transition-colors" %>
        <%= link_to "Log in", new_user_session_path, class: "px-5 py-2 rounded-full font-bold bg-slate-900 text-white hover:bg-slate-700 transition-colors shadow-md" %>
      <% end %>

      <%# ヘルプボタン %>
      <button type="button" 
         data-action="click->install-guide#open" 
         class="ml-2 w-9 h-9 flex items-center justify-center rounded-full text-slate-300 hover:text-indigo-600 hover:bg-indigo-50 transition-colors hidden md:flex" 
         title="App Info">
       <i data-lucide="help-circle" class="w-5 h-5"></i>
      </button>
    </nav>
  </header>
<% end %>

