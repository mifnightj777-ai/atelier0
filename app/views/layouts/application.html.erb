  <%= javascript_importmap_tags %>
  <script src="https://unpkg.com/lucide@latest"></script>
  
  <style>
    @keyframes bell-ring {
      0%, 100% { transform: rotate(0deg); }
      20% { transform: rotate(15deg); }
      40% { transform: rotate(-10deg); }
      60% { transform: rotate(5deg); }
      80% { transform: rotate(-5deg); }
    }
    .hover-bell:hover svg {
      animation: bell-ring 0.8s ease-in-out;
      transform-origin: top center;
    }
    @keyframes flask-sway {
      0%, 100% { transform: rotate(0deg); }
      25% { transform: rotate(-10deg); }
      75% { transform: rotate(10deg); }
    }
    .book-cover {
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      transform-origin: 8px 12px;
    }
    .group:hover .book-cover {
      transform: rotate(-15deg) translateX(-1px);
    }

    html, body { margin: 0; padding: 0; width: 100%; }
    html { scroll-behavior: smooth; }

    body.is-loading #loader {
      opacity: 1;
      pointer-events: auto;
    }
  </style>
</head>

<body data-controller="install-guide" data-install-guide-is-new-user-value="<%= user_signed_in? && current_user.created_at > 1.hour.ago %>" class="h-full text-slate-700 font-['Inter'] antialiased overflow-x-hidden m-0 p-0">

<%# --- ローディング・オーバーレイ --- %>
<div id="loader" class="fixed inset-0 z-[9999] bg-white flex flex-col items-center justify-center transition-opacity duration-700 pointer-events-none opacity-0">
  <div class="relative flex items-center justify-center">
    <div class="w-16 h-16 border-2 border-indigo-600/20 rounded-full"></div>
    <div class="absolute w-16 h-16 border-t-2 border-indigo-600 rounded-full animate-spin"></div>
    <div class="absolute w-2 h-2 bg-indigo-600 rounded-full animate-pulse"></div>
  </div>
  <p class="mt-8 font-['Poppins'] font-bold text-[10px] tracking-[0.4em] text-slate-400 uppercase animate-pulse">
    Loading now
  </p>
</div>

